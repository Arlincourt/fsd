extends ../../theme/layouts/layout.pug
include ../../components/logo/index.pug
include ../../components/calendar/index.pug
include ../../components/input/index.pug
include ../../components/title-3/index.pug
include ../../components/quantity-dropdown/index.pug
include ../../components/datepicker/index.pug
include ../../components/accordion/index.pug
include ../../components/advantage/index.pug
include ../../components/checkbox/index.pug
include ../../components/radio/index.pug
include ../../components/checkbox-toggle/index.pug
include ../../components/like/index.pug
include ../../components/rating/index.pug
include ../../components/range-slider/index.pug

block title 
	| Form Elements

block content 


	.wrapper 
		.content 
			.form-elements 
				.form-elements__logo
					+logo("./Logo-2.svg", "Logo") 
				.form-elements__body 
					.form-elements__row
						.form-elements__column
							.form-elements__item.form-elements__item_with_20_mb
								.form-elements__name
									+title-3('text field')
									p.form-elements__explanation default
								+input({type: 'email', placeholder: 'Email'})
							.form-elements__item.form-elements__item_with_20_mb
								.form-elements__name
									+title-3('text field')
									p.form-elements__explanation hover / focus
								+input({type: 'email', placeholder: 'This is pretty awesome', mode: ['focused']})
							.form-elements__item.form-elements__item_with_20_mb
								+quantity-dropdown({label: 'Сколько гостей', title: 'dropdown'})
							.form-elements__item.form-elements__item_with_40_mb
								.form-elements__name
									+title-3('masked text field')
								+input({type: 'text', placeholder: 'ДД.ММ.ГГГГ', masked: true})
							.form-elements__item.form-elements__item_with_40_mb
								+datepicker({title1: 'date dropdown', title2: 'date dropdown', label2: '19.08.2019'})
							.form-elements__item.form-elements__item_with_40_mb
								+datepicker({title1: 'filter date dropdown', label1: '19 авг - 23 авг', oneItem: true})
							.form-elements__item.form-elements__item_with_100_mb
								.form-elements__name
									+title-3('subscription text field')
								+input({type: 'email', placeholder: 'Email', button: true, small: true})
							.form-elements__item.form-elements__item_with_20_mb
								.form-elements__name.form-elements__name_small
									+title-3('dropdown')
									p.form-elements__explanation default
								+quantity-dropdown({label: '2 спальни, 2 кровати...', small: true})
							.form-elements__item.form-elements__item_with_170_mb
								.form-elements__name.form-elements__name_small
									+title-3('dropdown')
									p.form-elements__explanation expanded
								+quantity-dropdown({label: '2 спальни, 2 кровати...', small: true})
							.form-elements__item.form-elements__item_with_50_mb
								+accordion({title: 'expandable checkbox list', items: [
									{name: 'breakfast', text: 'Завтрак'},
									{name: 'table', text: 'Письменный стол', checked: true},
									{name: 'chair', text: 'Стул для кормления', checked: true},
									{name: 'bed', text: 'Кроватка', checked: true},
									{name: 'TV', text: 'Телевизор', checked: false},
									{name: 'shampoo', text: 'Шампунь', checked: false},
								]})
							.form-elements__item.form-elements__item_with_100_mb
								+accordion({title: 'expandable checkbox list', items: [
									{name: 'breakfast', text: 'Завтрак'},
									{name: 'table', text: 'Письменный стол', checked: true},
									{name: 'chair', text: 'Стул для кормления', checked: true},
									{name: 'bed', text: 'Кроватка', checked: true},
									{name: 'TV', text: 'Телевизор', checked: false},
									{name: 'shampoo', text: 'Шампунь', checked: false},
								]})
							.form-elements__item
								+advantage({text: 'Шумопоглощающие стены', name: 'Комфорт', border: true, class: 'icon-smile'})
							.form-elements__item
								+advantage({text: 'Окно в каждой из спален', name: 'Удобство', border: true, class: 'icon-location_city'})
						.form-elements__column
							.form-elements__item.form-elements__item_with_40_mb
								.form-elements__name.form-elements__name_with_15_mb 
									+title-3('Checkbox Buttons')
								.form-elements__checkbox
									+checkbox({name: 'smoking', text: 'Можно курить', checked: false})
								.form-elements__checkbox
									+checkbox({name: 'pets', text: 'Можно с питомцами', checked: true})
								.form-elements__checkbox
									+checkbox({name: 'invite', text: 'Можно пригласить гостей (до 10 человек)', checked: true})
							.form-elements__item.form-elements__item_with_40_mb
								.form-elements__name.form-elements__name_with_20_mb 
									+title-3('Radio Buttons')
								+radio({items: [{name: 'gender', label: 'Мужчина', checked: true}, {name: 'gender', label: 'Женщина'}]}) 
							.form-elements__item.form-elements__item_with_40_mb
								.form-elements__name.form-elements__name_with_15_mb 
									+title-3('toggle')
								.form-elements__toggle
									+checkbox-toggle({label: 'Получать спецпредложения', name: 'special-offer', checked: true}) 
								.form-elements__toggle
									+checkbox-toggle({label: 'Получать спецпредложения', name: 'special-offer'}) 
							.form-elements__item.form-elements__item_with_40_mb
								.form-elements__name.form-elements__name_with_15_mb 
									+title-3('like button')
								.form-elements__likes
									+like({active: false, number: 2})
									+like({active: true, number: 12})
							.form-elements__item.form-elements__item_with_195_mb
								.form-elements__name.form-elements__name_with_15_mb 
									+title-3('rate button')
								.form-elements__rates
									+rating(4)
									+rating(5)
							.form-elements__item.form-elements__item_with_255_mb
								+quantity-dropdown({label: 'Сколько гостей', title: 'dropdown'})
							.form-elements__item.form-elements__item_with_195_mb
								.form-elements__name.form-elements__name_with_15_mb 
									+title-3('rich Checkbox Buttons')
								.form-elements__checkbox
									+checkbox({name: 'corridor', title: 'Широкий коридор', describe: 'Ширина коридоров в номере не менее 91 см.'})
								.form-elements__checkbox
									+checkbox({name: 'help', title: 'Помощник для инвалидов', describe: 'На 1 этаже вас встретит специалист  и проводит до номера.'})
						.form-elements__column
							.form-elements__item.form-elements__item_with_40_mb
								+range-slider({title: 'Range Slider'})
					.form-elements__footer 
