extends ../../theme/layouts/layout.pug
include ../../components/room-wishes/room-wishes.pug
include ../../components/header/header.pug
include ../../components/footer/footer.pug
include ../../components/footer-small/footer-small.pug
include ../../components/room-info/room-info.pug
include ../../components/advantage/advantage.pug
include ../../components/title-3/title-3.pug
include ../../components/graph/graph.pug
include ../../components/comment/comment.pug
include ../../components/bulled-list/bulled-list.pug
include ../../components/paragraph/paragraph.pug

block title 
  | Room Details

block header 
  - 
    const { menu, navigation, text, copy, subscribtion } = require('./room-details.json')

  +header({ user: false, menu: menu })

block content
  .room-details
    .room-details__gallery
      img(src="images/main-img.png" class="room-details__main-img" alt="main image")
      img(src="images/secondary-img1.png" class="room-details__secondary-img" alt="secondary image")
      img(src="images/secondary-img2.png" class="room-details__secondary-img" alt="secondary image")
    .room-details__body 
      .room-details__info
        .room-details__item 
          h3.room-details__subtitle Сведения о номере
          +advantage({ text: 'Шумопоглощающие стены', name: 'Комфорт', className: 'icon-smile', border: true })
          +advantage({ text: 'Окно в каждой из спален', name: 'Удобство', className: 'icon-location_city', border: true })
          +advantage({ text: 'Номер оснащён камином', name: 'Уют', className: 'icon-comfort' })
        .room-details__item.room-details__item_offset_large
          h3.room-details__subtitle.room-details__subtitle_offset_small Впечатления от номера
          +graph({ numbers: '260', items: [
            { text: 'Разочарован', color: 'black' },
            { text: 'Удовлетворительно', color: 'purple', gradient: ['#BC9CFF', '#8BA4F9'], voices: 260 },
            { text: 'Хорошо', color: 'green', gradient: ['#6FCF97', '#66D2EA'], voices: 260 },
            { text: 'Великолепно', color: 'yellow', gradient: ['#FFE39C', '#FFBA9C'], voices: 522 },
          ] })
        .room-details__item 
          h3.room-details__subtitle.room-details__subtitle_offset_extra-large Отзывы посетителей номера
          .room-details__comment 
            +comment( {
              src: 'images/avatar-1.jpg',
              alt: 'Мурад Сарафанов',
              time: '5 дней назад',
              number: 12,
              active: true,
              name: 'Мурад Сарафанов',
              message: `Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, 
                действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.`
            } )
          .room-details__comment 
            +comment({
              src: 'images/avatar-2.jpg',
              alt: 'Патрисия Стёклышкова',
              time: 'Неделю назад',
              number: 2,
              active: false,
              name: 'Патрисия Стёклышкова',
              message: `Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, 
                каждый день новое блюдо и десерт как комплимент`
            })
        .room-details__rules 
          .room-details__note
            h3.room-details__subtitle.room-details__subtitle_offset_large.room-details__subtitle_offset_medium Правила
            +bulled-list({ items: [
              { text: 'Нельзя с питомцами' },
              { text: 'Без вечеринок и мероприятий' },
              { text: 'Время прибытия — после 13:00, а выезд до 12:00' },
            ]})
          .room-details__note.room-details__note_offset_large
            h3.room-details__subtitle.room-details__subtitle_offset_medium Отмена
            +paragraph(`Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.`)
      +room-info({ label1: '19.08.2019', label2: '23.08.2019' })




block footer
  .room-details__footer.room-details__footer_size_big
    +footer({ text, navigation, copy, subscribtion })
  .room-details__footer.room-details__footer_size_small
    +footer-small(copy)

      