mixin menu(links)
  nav.menu.js-menu
    .menu__body.js-menu-body
      ul.menu__list.js-menu-list
        each link in links
          li.menu__item
            if Array.isArray(link.link)
              a.menu__link= link.text
              .menu__expander
              ul.menu__submenu.js-submenu
                each subitem in link.link
                  li.menu__sub-item
                    a.menu__link(href=subitem.link)= subitem.text
            else
              - let classes = ["menu__link"]
              if link.current
                - classes.push("menu__link_font_bold")
              a(class=classes href=link.link)= link.text