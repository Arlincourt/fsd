include ../../components/title-3/index.pug

mixin dropdown(params)
	-
		const label = params.label || 'Выберите'
		const title = params.title || undefined
		const classes = ['dropdown__body']
		if(params.small) {
			classes.push('dropdown__body_small')
		}

	.dropdown.js-dropdown 
		div(class=classes)
			if(title !== undefined)
				.dropdown__title
					+title-3(title)
			.dropdown__content.js-dropdown-content
				label.dropdown__label
					input(placeholder=label class="dropdown__input js-dropdown-input")
						