mixin chart({numbers = '260', items = []})
  .chart.js-chart
    .chart__canvas-wrapper
      canvas(class="chart__canvas js-chart-canvas")
      .chart__info.js-chart-info
        span.chart__numbers.js-chart-numbers= numbers 
        p.chart__text голосов
    ul.chart__list 
      each item in items 
        li(class="chart__item chart__item_color_"+item.color)= item.text 
