    const classes = ["rent-info__title"];

    if(small) {
      classes.push("rent-info__title_size_small");
    }

  .rent-info 
    .rent-info__number
      +title-3('№') 
      h2(class=classes)= number
      if luxury 
        p.rent-info__luxury люкс
    p.rent-info__price
      span.rent-info__text= price 
        | &#8381; 
