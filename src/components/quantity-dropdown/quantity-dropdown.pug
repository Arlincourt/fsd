include ../../components/dropdown/dropdown.pug
include ../../components/title-3/title-3.pug

mixin quantity-dropdown({ label = 'label', title = '', small = null })
  -
    const classes = ['']
    if(small) {
      classes.push('quantity-dropdown_size_small')
    }
    
  .quantity-dropdown(class=classes)
    if title 
      .quantity-dropdown__title
        +title-3(title)
    .quantity-dropdown__body.js-quantity-dropdown__body
      +dropdown({ label: label })